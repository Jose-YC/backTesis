generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Rol {
  id         Int       @id @default(autoincrement())
  name       String    @unique
  state      Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  user       User[]
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  password    String
  name        String
  lastname    String
  phone       String
  img         String?    

  emailVeri   Boolean   @default(false)
  state       Boolean   @default(true)
  
  rolName     String    @default("user")
  rol         Rol       @relation(fields: [rolName], references: [name])

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Suppliers {
  id          Int      @id @default(autoincrement())
  repre       String   
  ruc         String
  email       String   @unique
  address     String
  phone       String
  state       Boolean   @default(true)
  
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

enum LevelLog {
  LOW
  MEDIUM
  HIGH
}

model Log {
  id        Int      @id @default(autoincrement())
  level     LevelLog 
  message   String  
  origin    String   
  userid    Int?
  date      DateTime @default(now())
}